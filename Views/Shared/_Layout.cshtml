<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Attic Lego</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/jquery.minicolors.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-lego border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img alt="" class="img-fluid logo-lego rotate" src="/imgs/logo_brick.svg" /> Attic Lego
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Themes" asp-action="Index">Themes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Boxes" asp-action="Index">Boxes</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdownBricks" role="button" data-bs-toggle="dropdown" aria-expanded="false">Bricks lib</a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownBricks">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Bricks" asp-action="Index">Bricks</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="BrickColors" asp-action="Index">Colors</a></li>
                            </ul>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container pt-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted text-center">
        <div class="container">
            <hr class="bg-lego mt-3 mb-3">
            <img alt="" class="img-fluid logo-lego" src="/imgs/logo_brick.svg"/> Attic Lego - 2022<br/>
            <small>Attic Lego is not affiliated with The Lego Group. Nor should it be considered an approved website by The Lego Group.</small><br/>
            <small>
                <a asp-area="" class="badge bg-lego text-dark" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </small>
        </div>
    </footer>

    <div class="toast-container position-fixed bottom-0 end-0 p-3" id="toastEvents">
        @if (ViewData["notifTitle"] is not null)
        {
            <div class="toast" role="alert" data-bs-delay="7500" aria-live="assertive" aria-atomic="true">
                <div class="toast-header">
                    <strong class="me-auto"><i class="fa-solid fa-@ViewData["notifIcon"]"></i> @ViewData["notifTitle"]</strong>
                    <small class="text-muted">just now</small>
                    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
                <div class="toast-body">
                    @ViewData["notifMsg"]
                </div>
            </div>
        }
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/jquery.minicolors.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
