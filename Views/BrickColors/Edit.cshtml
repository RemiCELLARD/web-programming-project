@model Web_Programming_Project.Models.BrickColor

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>BrickColor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="BrickColorName" class="control-label"></label>
                <input asp-for="BrickColorName" class="form-control" />
                <span asp-validation-for="BrickColorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Color RGBA</label>
                <input type="text" id="colorPickerInput" class="form-control" value="rgba(@(Model.BrickColorRed), @(Model.BrickColorGreen), @(Model.BrickColorBlue), @(Model.BrickColorAlpha))">
                <input asp-for="BrickColorRed" class="form-control visually-hidden disabled" />
                <input asp-for="BrickColorGreen" class="form-control visually-hidden disabled" />
                <input asp-for="BrickColorBlue" class="form-control visually-hidden disabled" />
                <input asp-for="BrickColorAlpha" class="form-control visually-hidden disabled" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
